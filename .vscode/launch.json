{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Principal",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/trabalho-pratico/bin/principal", // Path to the main executable
            "args": [], // Arguments to pass to the program, if any
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/trabalho-pratico",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb",
            "logging": {
                "engineLogging": false
            },
            "preLaunchTask": "make"
        },
